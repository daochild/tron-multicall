{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "compiler": "0.8.18",
        "parser": "solidity-parse",
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "printWidth": 80,
        "tabWidth": 4,
        "semi": true,
        "arrowParens": "always",
        "trailingComma": "none"
      }
    }
  ]
}
